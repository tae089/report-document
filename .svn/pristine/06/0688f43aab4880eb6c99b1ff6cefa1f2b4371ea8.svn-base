/*Ajax Loading image*/

.ajax_loader {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    margin: 0 auto;
    background-color: rgba(0, 0, 0, 0.3);
    z-index: 99999999;
}

.ajax_loader img {
    position: fixed;
    z-index: 99999999;
    overflow: show;
    margin: auto;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    width: 150px;
    height: 150px;
    pointer-events: none;
}